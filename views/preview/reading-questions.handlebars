<div id="admin">
    <div class="admin-inner">

        <!-- sidebar -->
        {{> _sidebar}}
        <!-- end of sidebar -->
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">



                        <div id="assessment">
                            <div class="mt-5">


                                <section>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 mx-auto">

                                                <div class="card text-dark mb-2">
                                                    <div class="card-body">
                                                        <h1>{{title}}</h1>
                                                        <hr>

                                                        <p>
                                                            <b>Base on what you read from the passage, answer the
                                                                following questions below.</b>
                                                        </p>

                                                        <form action="/assessment/reading-questions" method="post">
                                                            {{#each questions}}
                                                            <div class="card bg-light mt-2 {{factor}}">
                                                                <div class="card">
                                                                    <div class="card-header">
                                                                        <p>
                                                                            {{text}}
                                                                        </p>
                                                                        <img src="{{image}}">
                                                                    </div>
                                                                    <div class="card-body">
                                                                        {{#each answers}}
                                                                        <div class="radio">
                                                                            <label>
                                                                                <input type="radio" value="{{value}}"
                                                                                    name="{{../_id}}" required>
                                                                                {{text}}
                                                                            </label>
                                                                        </div>
                                                                        {{/each}}
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            {{/each}}
                                                            <br>
                                                            <div class="progress" style="height: 20px">
                                                                <div class="progress-bar progress-bar-striped progress-bar-animated progress-bar-gold"
                                                                    role="progressbar" aria-valuenow="80" aria-valuemin="0"
                                                                    aria-valuemax="100" style="width: 80%">80%</div>
                                                            </div>
                                                            <br>
                                                            <div class="text-center mb-2">
                                                                <button type="submit" class="btn btn-primary btn-color">Save
                                                                    and Continue</a>
                                                            </div>
                                                        </form>


                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                </section>
                            </div>
                        </div>





                    </div>
                </div>
            </div>
        </section>
    </div>